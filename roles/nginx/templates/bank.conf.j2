server {
  listen 80;
  listen [::]:80;
  server_name bank.rcmd.space;

  return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    access_log /var/log/nginx/bank.rcmd.space_access.log json;
    error_log /var/log/nginx/bank.rcmd.space_error.log;

    ### SSL cert files ###
    ssl_certificate {{nginx.new_ssl_certificate}};
    ssl_certificate_key {{nginx.new_ssl_certificate_key}};

    ### Add SSL specific settings here ###
    ssl_session_timeout 10m;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers {{nginx.ssl_ciphers}};
    ssl_prefer_server_ciphers on;

    ### Compression
    gzip on;
    gzip_comp_level    5;
    gzip_min_length    256;
    gzip_proxied       any;
    gzip_vary          on;
    gzip_types
    application/rss+xml
    text/css;

    server_name bank.rcmd.space;

    auth_basic "Protected area";
    auth_basic_user_file /etc/datasources/htpasswd;

    location / {
        proxy_pass http://127.0.0.1:55000;
    }
}