cfgdir="$HOME/.config/dotfiles/cfg"

#configs functions
function install_zsh_config() {
    ln -is $cfgdir/zshrc ~/.zshrc
    curl -sL http://install.ohmyz.sh | sh
    echo $HOME"/.zshrc" >> $cfgdir/../installed
    echo $HOME"/.oh-my-zsh" >> $cfgdir/../installed
}

function install_vimrc() {
    ln -is $cfgdir/vimrc $HOME/.vimrc
    echo $HOME"/.vimrc" >> $cfgdir/../installed
}

function install_gitconfig() {
    ln -is $cfgdir/gitconfig $HOME/.gitconfig
    echo $HOME"/.gitconfig" >> $cfgdir/../installed
}

function install_screenrc() {
    ln -is $cfgdir/screenrc $HOME/.screenrc
    echo $HOME"/.screenrc" >> $cfgdir/../installed
}

function install_i3cfg() {
    if ! [[ -d ~/.i3 ]]; then
        mkdir ~/.i3
    fi
    ln -is $cfgdir/i3/config $HOME/.i3/config
    echo $HOME"/.i3" >> $cfgdir/../installed
}

function install_binutils() {
    if ! [[ -d ~/bin ]]; then
        mkdir ~/bin
    fi
    ln -is $cfgdir/bin/* $HOME/bin/*
    echo $HOME"/bin" >> $cfgdir/../installed
}

#setup funtions

function setup_common() {
    cat /dev/null > $cfgdir/../installed
    install_zsh_config
    install_vimrc
    install_screenrc
    install_gitconfig
    echo $HOME"/.config/dotfiles" >> $cfgdir/../installed
}

function setup_linux() {
    setup_common
    install_i3cfg
}

function setup_osx() {
    setup_common
}
