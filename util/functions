cfgdir="~/.config/dotfiles/cfg"

#configs functions
function install_zsh_config() {
    ln -is $cfgdir/zshrc ~/.zshrc
    curl -sL http://install.ohmyz.sh | sh
}

function install_vimrc() {
    ln -is $cfgdir/vimrc ~/.vimrc
}

function install_screenrc() {
    ln -is $cfgdir/screenrc ~/.screenrc
}

function install_i3cfg() {
    if ! [[ -d ~/.i3 ]]; then
        mkdir ~/.i3
    fi
    ln -is $cfgdir/i3/config ~/.i3/config
}


#setup funtions

function setup_common() {
    install_zsh_config
    install_vimrc
    install_screenrc
}

function setup_linux() {
    install_i3cfg
    setup_common
}

function setup_osx() {
    setup_common
}
